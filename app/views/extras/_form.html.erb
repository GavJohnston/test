<%= form_for([@user, @user.extras.build]) do |f| %>
<form>
 <div class="form-row">
 <div class="form-group col-md-1.5">
 <%= f.label :issue %><br>
 <%= f.text_field :issue %>
 </div>
 <div class="form-group col-md-1.5">
 <%= f.label :current_date %><br>
 <%= f.date_select :current_date%>
</div>
</div>
 <div class="form-row">
  <div class="form-group col-md-1.5">
 <%= f.label :resolution %><br>
 <%= f.text_area :resolution %>
</div>
 <div class="form-group col-md-1.5">
 <%= f.label :next_appointment %><br>
 <%= f.date_select :next_appointment %>
</div> 
</div>
 <div class="form-group">
 optional<%= f.label :Image_upload %><br>
 (keep note of rashes, swelling...)
 <%= f.file_field :image %>
</div>
 <div>
 <button type="submit" class="btn btn-success btn-lg">Submit</button>
</div>
